# Multi-stage build for Agent Zero App-Agent
# Stage 1: Builder
FROM python:3.11-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency specifications and source code
COPY pyproject.toml ./
COPY README.md ./
COPY src ./src

# Create virtualenv and install dependencies
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"
RUN pip install --upgrade pip setuptools wheel && \
    pip install -e .

# ============================================================================
# Stage 2: Runtime
# ============================================================================
FROM python:3.11-slim

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy virtualenv from builder
COPY --from=builder /opt/venv /opt/venv

# Set environment
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Create non-root user for security
RUN useradd -m -u 1000 agentuser && \
    mkdir -p /app/data /app/logs && \
    chown -R agentuser:agentuser /app

# Copy application code and startup script
COPY --chown=agentuser:agentuser src /app/src
COPY --chown=agentuser:agentuser pyproject.toml /app/
COPY --chown=agentuser:agentuser docker/start_services.sh /app/start_services.sh

# Make startup script executable (must happen as root, before USER switch)
RUN chmod +x /app/start_services.sh

# Switch to non-root user
USER agentuser

# Health check for Chainlit Chat UI
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8501/health || exit 1

# Default environment
ENV APP_ENV=development \
    APP_DEBUG=true \
    APP_HOST=0.0.0.0 \
    APP_PORT=8501 \
    APP_ADMIN_PORT=8502

# Expose both Chainlit ports
EXPOSE 8501
EXPOSE 8502

# Entry point: start Chat UI (8501) + Admin Dashboard (8502)
CMD ["/app/start_services.sh"]
