<?xml version="1.0"?>
<clickhouse>
    <!-- Zookeeper configuration for replication -->
    <zookeeper>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <!-- Macros for cluster replication -->
    <macros>
        <shard>1</shard>
        <replica>replica1</replica>
    </macros>

    <!-- Single-node cluster configuration for development -->
    <remote_servers>
        <default>
            <shard>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </default>
    </remote_servers>
</clickhouse>
